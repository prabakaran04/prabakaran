<odoo>
    <data>
        explicit list view definition

        <record model="ir.ui.view" id="clientdetails_list">
            <field name="name">Client Details list</field>
            <field name="model">client.details</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="client_name" />
                    <field name="address" />
                    <field name="client_email" />
                    <field name="mobile" />
                 <!--    <field name ="status"/> -->
                    <field name ="client_sex"/>
                    
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="clientdetails_form">
            <field name="name">client Details form</field>
            <field name="model">client.details</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                    <h1><field name ='client_id'/></h1>
                        <group>
                            <group>
                               <field name="client_name" />
                               <field name="address" />
                               <field name ="status"/>
                               <field name ="client_sex"/>
                               
                            </group>
                            <group>
                               <field name="client_email" />
                               <field name="mobile" />
                               <field name="customer_image"
                                    widget="image"
                                    class="oe_left oe_avatar" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
         
         
         <record id="client_search_view" model="ir.ui.view">
        <field name="name">client search view</field>
        <field name="model">client.details</field>
        <field name="arch" type="xml">
            <search string="client analysis">
            <field name ="client_name"/>
                        <field name ="client_name"/>
                        <field name ="client_id"/>
                        <field name ="client_email"/>
                        <field name ="address"/>
                        <field name ="mobile"/>
                        <field name ="status"/>
                        <group expand ="0" string ="group by">
                             <filter name = "groupby_status" string = "status" domain ="[]" context ="{'group_by':'status'}"
                             help = 'group client by status'/>
                        </group>
                        <filter name = "filterby_sex" string ="male" domain="[('client_sex','=','male')]" help ="filter by sex"/>             
                         
            </search>
        </field>
    </record>
    
     <record model="ir.ui.view" id="view_client_details">
            <field name="name">client details</field>
            <field name="model">client.details</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name ="id"/>
                    <field name="client_name"/>
                    <field name="client_email"/>
                    <field name="mobile"/> 
                    <field name="customer_image"/>
                    
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top mb16">
                                    <div class="o_kanban_record_headings mt4">
                                        <strong class="o_kanban_record_title"><bold><field name="client_name"/></bold></strong>
                                    </div>
                                    <strong><field name="client_email" widget="email"/></strong>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left text-muted">
                                        <span><field name="mobile"/></span>
                                    </div>
                                    <div class="col-4 text-right">
                                        <img t-att-src="kanban_image('client.details', 'customer_image', record.id.raw_value)" alt="customer image" width="50" height="50" class="oe_kanban_avatar"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    
    
   


        actions opening views on models

        <record model="ir.actions.act_window" id="clientdetails_action">
            <field name="name">Client Details </field>
            <field name="res_model">client.details</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,kanban,search</field>
        </record>

       <record id ="clients_sequence_id" model ="ir.sequence">
        <field name="name">client details </field>
        <field name="code">client.details</field>
        <field name ="prefix">CD</field>
        <field name="padding">3</field>
      </record>
      

      

        menu categories

        <menuitem name="client Detials " id="menu_client_details"
            parent="main_menu_medicalmanagement" action="clientdetails_action" sequence="3" />

    </data>
</odoo> 
